.about
    margin-bottom 112px

    &__container
        display flex
        flex-wrap wrap

    &__inner
        order 1
        padding 75px 24px 0

    &__title
        max-width 225px
        margin 0 auto 24px
        font-weight 900
        font-size 32px
        line-height 1.12
        text-align center
        text-transform uppercase
        color color-secondary-black

    &__text
        margin 0
        text-align center

    &__img
        border-radius 20px
        overflow hidden

        &--sm
            position relative
            width calc(100% - 220px - 24px)
            margin-left -24px
            margin-right 24px

            &::before
                content ""
                position absolute
                top 0
                left 0
                right 0
                bottom 0
                background-color color-primary
                opacity .75
                mix-blend-mode multiply

        &--lg
            width 220px

        img
            display block
            width 100%
            height 100%
            object-fit cover

@media (min-width 768px)
    .about
        margin-bottom 142px

        &__inner
            display flex
            flex-wrap nowrap
            align-items center
            width 100%
            padding-left 0
            padding-right 0

        &__title
            width 255px
            margin-left 0
            margin-bottom 0
            text-align left

        &__text
            width 400px
            text-align left

        &__img

            &--sm
                width 214px
                margin-left 0
                margin-right 30px

            &--lg
                width 445px

@media (min-width 1200px)
    .about
        position relative
        margin-bottom 168px

        &::before
            content ""
            position absolute
            right calc(50% + 550px + 30px)
            bottom 0
            width 225px
            height 240px
            background-color color-secondary-grey-light
            border-radius 20px

        &__container
            flex-wrap nowrap
            align-items center

        &__inner
            flex-direction column
            align-items start
            width 255px
            margin-left 125px
            padding-top 0

        &__title
            margin-bottom 27px

        &__text
            width 100%

        &__img

            &--sm
                width 255px
