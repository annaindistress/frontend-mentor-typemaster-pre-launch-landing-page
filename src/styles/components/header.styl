.header
    margin-bottom 64px
    padding 24px
    padding-bottom 0

    &__container
        display flex
        flex-wrap nowrap
        justify-content space-between
        align-items center

    &__link
        width 40px
        height 40px

    &__logo
        display block
        width 100%
        height auto

@media (min-width: 768px)
    .header
        padding-top 40px

@media (min-width: 1200px)
    .header
        margin-bottom 83px
        padding-top 55px
