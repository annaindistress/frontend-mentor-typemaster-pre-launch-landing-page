.promo
    margin-bottom 24px
    overflow hidden

    &__inner
        margin-bottom 64px
        padding 0 24px

    &__title
        margin 0 0 32px
        font-weight 900
        font-size 48px
        line-height 1
        text-transform uppercase
        color color-secondary-black

    &__text
        margin 0 0 32px

    &__button-desc
        margin-left 32px
        font-weight 700
        text-transform uppercase

    &__img
        display block
        margin-left 24px
        width 100%
        height 331px
        border-radius 20px
        overflow hidden

        img
            display block
            width 100%
            height 100%
            object-fit cover

@media (min-width 768px)
    .promo
        margin-bottom 40px

        &__container
            display flex
            flex-wrap nowrap

        &__inner
            width 340px
            min-width 340px
            margin-right 69px
            margin-bottom 0
            padding 60px 0 0

        &__title
            margin-bottom 34px

        &__text
            margin-bottom 40px

        &__img
            margin-left 0
            min-width 478px
            height 425px

@media (min-width 1200px)
    .promo
        position relative
        margin-bottom 30px

        &::after
            content ""
            position absolute
            top 0
            left calc(50% + 550px + 30px)
            width 225px
            height 240px
            background-color color-secondary-grey-light
            border-radius 20px

        &__inner
            width 445px
            min-width 445px
            margin-right 125px

        &__title
            margin-bottom 24px
            font-size 56px

        &__img
            height 480px
